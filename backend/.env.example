# Application
PORT=4000
NODE_ENV=development
ENABLE_DOCS=true

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=social_selling
POSTGRES_USER=social_selling_user
POSTGRES_PASSWORD=changeme

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# MinIO
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme
MINIO_BUCKET_NAME=social-selling-media

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Instagram
INSTAGRAM_APP_ID=your-app-id
INSTAGRAM_APP_SECRET=your-app-secret
INSTAGRAM_REDIRECT_URI=http://localhost:4000/api/instagram/oauth/callback
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Frontend
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_DIR=logs
LOG_LEVEL=info
# Options: error, warn, info, http, debug, verbose

# Sentry Configuration (optional for local development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
