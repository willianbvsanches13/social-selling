# n8n Configuration
N8N_HOST=n8n.willianbvsanches.com
N8N_PROTOCOL=https
N8N_WEBHOOK_URL=https://n8n.willianbvsanches.com/
N8N_EDITOR_BASE_URL=https://n8n.willianbvsanches.com

# IMPORTANT: These values match the production configuration from social-selling project

# Timezone
TIMEZONE=America/Sao_Paulo

# n8n Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Database Configuration
N8N_DB_NAME=n8n
N8N_DB_USER=n8n_user
N8N_DB_PASSWORD=your_secure_database_password_here

# n8n Encryption Key (IMPORTANT: Generate a secure random key and keep it safe!)
# You can generate one with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your_encryption_key_here

# Execution Settings
N8N_EXECUTIONS_TIMEOUT=3600
N8N_EXECUTIONS_TIMEOUT_MAX=7200
N8N_PAYLOAD_SIZE_MAX=16

# Basic Authentication (Optional - set to true to enable)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_basic_auth_password_here
