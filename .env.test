# Environment
NODE_ENV=development

# Application URLs
APP_URL=http://localhost
API_URL=http://localhost:4000
WS_URL=ws://localhost:4000

# SSL Configuration (Development - not used)
SSL_CERT_PATH=./infrastructure/nginx/ssl-dummy
SSL_WEBROOT_PATH=./infrastructure/nginx/ssl-dummy

# Backend Configuration
BACKEND_PORT=4000

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=social_selling
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
DATABASE_URL=postgresql://postgres:postgres_dev_password@postgres:5432/social_selling?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_URL=redis://:redis_dev_password@redis:6379

# JWT Secrets (Development only - CHANGE in production!)
JWT_SECRET=development_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=development_jwt_refresh_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Instagram API Configuration
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:4000/api/instagram/callback
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=dev_webhook_token

# OAuth Encryption
OAUTH_ENCRYPTION_KEY=dev_encryption_key_32_chars_long

# MinIO S3 Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=social-selling

# Worker Configuration
WORKER_CONCURRENCY=2

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001
