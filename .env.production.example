# Environment
NODE_ENV=production

# Application URLs
APP_URL=https://app-socialselling.willianbvsanches.com
API_URL=https://api.app-socialselling.willianbvsanches.com
WS_URL=wss://api.app-socialselling.willianbvsanches.com

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/letsencrypt
SSL_WEBROOT_PATH=/var/www/certbot

# Backend Configuration
BACKEND_PORT=4000

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=social_selling
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/social_selling?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Secrets (CHANGE THESE!)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# Instagram API Configuration
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://api.app-socialselling.willianbvsanches.com/api/instagram/callback
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# OAuth Encryption
OAUTH_ENCRYPTION_KEY=your_32_character_encryption_key_here

# MinIO S3 Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_BUCKET_NAME=social-selling

# Worker Configuration
WORKER_CONCURRENCY=5

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
GRAFANA_ROOT_URL=https://grafana.app-socialselling.willianbvsanches.com
